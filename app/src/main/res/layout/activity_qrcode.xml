<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textAlignment="center"
            android:textSize="20dp"
        android:text="As per entered source and destination, the generated QR Code is as below. Please show it to the conductor on booarding the bus for payment and booking confirmation."/>
    <ImageView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:layout_gravity="center"
        android:src="@drawable/qr"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ffa500"
        android:text="Proceed"
        android:textColor= "#ffffff"
        android:id="@+id/proceedfromqr"/>


</LinearLayout>
